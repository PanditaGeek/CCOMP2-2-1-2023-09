#include <iostream>
using namespace std;

bool esCaracter(char car) {  
int val = static_cast<int>(car);
return((val >= 65 && val <= 90) || (val >= 97 && val <= 122));
}

int main() {
  char caracter;
  cout << "Ingrese un caracter: ";
  cin >> caracter;

  cout << esCaracter(caracter) << endl;
    
  return 0;
}

#include <iostream>
using namespace std;

int contarCharDeCadena(string cad, char car){
  int cont = 0;
  
  for(int i = 0; i < cad.length(); i++ ){
    if(cad.at(i) == car){
      cont++;        
      }
    }
    return cont;
  
    
}

int main() {
    string cad;
    cout << "Ingrese cadena: " << endl;
    cin >> cad;

    char car;
    cout << "Ingrese caracter: " << endl;
    cin >> car;

    cout << "El caracter se repite " << contarCharDeCadena(cad, car) << endl;
    
    
    return 0;
}



